---
const { fileName, filePath } = Astro.props;
---

<a
  href={filePath}
  download={fileName} 
  class="btn-download"
  title="Descargar cv"
>
    {fileName}
</a>

<style>
  .btn-download {
    display: inline-block;
    padding: 8px 8px;
    font-size: 16px;
    color: #fff;
    background: #697565;
    text-decoration: none;
    border-radius: 50%;
    text-align: center;
    cursor: pointer;
  }

  .btn-download:hover {
    background-color: #000;
  }
</style>