---
// Navbar.astro
---
<nav class="navbar">
  <div class="container">
      <button class="menu-toggle" id="menu-toggle">&#9776;</button>
      <ul class="nav-links" id="nav-links">
          <li><a href="#about">Acerca de mí</a></li>
          <li><a href="#experience">Experiencia</a></li>
          <li><a href="#skills">Proyectos</a></li>
          <li><a href="#contact">Contacto</a></li>
      </ul>
  </div>
</nav>
  
<style>
  body {
      margin: 0;
      font-family: Arial, sans-serif;
  }

  .navbar {
      background-color:#ffffff43;
      padding: 20px 0;
      position: fixed;
      width: 100%;
      top: 0;
      left: 0;
      z-index: 100;
      height: 40px; /* Define la altura de la barra de navegación */
  }

  .container {
      display: flex;
      justify-content: center;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
      width: 100%;
      height: 40px;
  }

  .menu-toggle {
      display: none;
      background: none;
      border: none;
      color: #1E201E;
      font-size: 24px;
      cursor: pointer;
      margin-right: 20px;
  }

  .nav-links {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
  }

  .nav-links li {
      margin: 0 15px;
  }

  .nav-links a {
      color: #fff;
      text-decoration: none;
      font-size: 16px;
      border: 2px solid color: #1E201E; /* Borde negro */
      border-radius: 20px; /* Opcional: bordes redondeados */
      padding: 10px;
      background-color: #1E201E;
  }

  .nav-links a:hover {
      background-color: #fff;
      color: #1E201E;
  }

  @media (max-width: 768px) {
      .menu-toggle {
          display: block;
          margin-left: 20px;
      }

      .nav-links {
          display: none;
          flex-direction: column;
          width: 100%;
          background-color: #fff;
          position: absolute;
          top: 60px;
          left: 0;
          align-items: center;
      }

      .nav-links.active {
          display: flex;
      }

      .nav-links li {
          margin: 10px 0;
      }

      .nav-links a{
        border: none;/* Borde negro */
        border-radius: none; /* Opcional: bordes redondeados */
        border: none; /* Borde negro */
        background-color: #fff;
        color: #1E201E;
      }
  }
</style>
  
<script>
  // Obtener elementos del DOM
const menuToggle = document.getElementById('menu-toggle') as HTMLButtonElement;
const navLinks = document.getElementById('nav-links') as HTMLUListElement;

// Añadir el evento de clic al botón de menú
menuToggle.addEventListener('click', () => {
    // Alternar la clase 'active' en el menú de navegación
    navLinks.classList.toggle('active');
});
</script>